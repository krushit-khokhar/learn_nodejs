<main>
    {{#if (hasProducts)}}
    <div class="grid">
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    {{this.title}}
                </h1>
                <div class="card__image">
                    <img
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBOXEWF5ZsjOOilROldv8mp4R8cToh3eZxd6qeuD4GBw&s"
                        alt="A Book"
                    />
                    <div class="card__content">
                        <h2 class="product__price">
                            600 Rs.
                        </h2>
                        <p class="product__description">
                            A Very interesting book about so many event more interesting
                            things!
                        </p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </header>
        </article>
        {{/each}}
    </div>
    {{else}}
    <h1>Product Not Available</h1>
    {{/if}}
</main>