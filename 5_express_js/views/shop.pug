extends layouts/main-layout.pug

block content
    main
        if prods.length >0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBOXEWF5ZsjOOilROldv8mp4R8cToh3eZxd6qeuD4GBw&s", alt="A Book")
                        .card__content
                            h2.product__price 600 Rs.
                            p.product__description A Very interesting book about so many event more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
